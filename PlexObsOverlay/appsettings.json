{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  // The url/ip and port of the machine running this (this ip needs to be able to be reached by the plex server and your obs if not running on the same machine!)
  // Setting this to 'http://*:xxxx' will bind it to all interfaces including your public ip and will be accissible from the internet if the port is opened externally!
  // If this is running on the machine the plex server and obs is on, you can set this to 'http://localhost:xxxx', else setting this to your local network ip (eg 'http://192.168.0.2:xxxx') is recommended
  "Urls": "http://*:5727",
  // Plex specific settings
  "Plex": {
    // The username of the plex account you use to listen music on
    "Username": "*"
  }
}
